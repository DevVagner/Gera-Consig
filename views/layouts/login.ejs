    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <title>Rocket Sell | Login</title>
    <link rel="shortcut icon" href="/img/login/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/css/login/login.css">

  </head>

<body>
  <div class="main">
    <div class="box" id="box">
      <div class="login-box">
        <img class="icon" src="/img/login/rocketsell.png" alt="Icon">
        <p class="p-dados">Preencha com os seus dados:</p>
        <input type="text" placeholder="  Email" id="inputEmail">
        <input type="text" placeholder="  Senha" id="inputPassword">
        <p class="p-senha">Esqueceu a sua senha?</p>
        <button class="btn-login" id="#btn-login">Entrar</button>
      </div>
    </div>
  </div>
</body>
</html>

<script>
  const btn = document.querySelector('.btn-login')

  btn.addEventListener("click", function() {
    const email = document.querySelector("#inputEmail").value;
    const password = document.querySelector("#inputPassword").value;

    if (email.length == 0) { 
      email.style.cssText = "border: 2px solid red"
    }

    if (password.length == 0) {
      password.style.cssText = "border: 2px solid red"
    }

    fetch("/login/auth", {
      method: "POST",
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ email: email, password: password })
    })
      .then((response) => {
        if (response.ok) {
            return response.json(); // obter os dados da resposta no formato JSON
        }
      })
      .then((data) => {
        if (data.auth) {
          if (data.admin) {
            // window.location.href = "https://rocket-sell.herokuapp.com/users"
            location.reload()
          } else if (data.admin == false) {
            location.reload()
          }
        }
      })
      .catch((error) => {
          console.log(error)
      })

  })
</script>
